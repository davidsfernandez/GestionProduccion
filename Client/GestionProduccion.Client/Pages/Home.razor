@page "/"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models.DTOs
@using GestionProduccion.Client.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject SignalRService SignalR
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

@using GestionProduccion.Client.Resources

<PageTitle>@Portuguese.Dash_Title</PageTitle>

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3 class="d-inline-block align-middle text-dark">@Portuguese.Dash_Title</h3>
        </div>
        <div class="col-auto ms-auto text-end mt-n1">
             <button class="btn btn-primary shadow-sm" @onclick="LoadDashboard">
                 <i class="fa-solid fa-arrows-rotate"></i>
             </button>
        </div>
    </div>

    @if (dashboard == null)
    {
        <div class="d-flex justify-content-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@Portuguese.Loading</span>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- COLUMNA PRINCIPAL (LEFT) -->
            <div class="col-xl-8 col-xxl-8 d-flex flex-column">
                
                <!-- KPI ROW -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="card flex-fill border-0 shadow-sm">
                            <div class="card-body py-4">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 class="mb-1 fw-bold text-dark">@dashboard.TotalProducedUnits</h3>
                                        <p class="mb-0 text-muted small fw-bold uppercase">Unidades Produzidas</p>
                                        <div class="mt-2">
                                            <span class="badge bg-success bg-opacity-10 text-success me-2"> 
                                                <i class="fa-solid fa-arrow-trend-up me-1"></i> +@dashboard.EfficiencyTrend% 
                                            </span>
                                        </div>
                                    </div>
                                    <div class="ms-3">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                            <i class="fa-solid fa-box text-primary fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card flex-fill border-0 shadow-sm">
                            <div class="card-body py-4">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <h3 class="mb-1 fw-bold text-dark">@dashboard.CompletionRate.ToString("N1")%</h3>
                                        <p class="mb-0 text-muted small fw-bold uppercase">Taxa de Conclusão</p>
                                        <div class="mt-2">
                                            <span class="badge bg-primary bg-opacity-10 text-primary me-2">Meta: 90%</span>
                                        </div>
                                    </div>
                                    <div class="ms-3">
                                        <div class="bg-dark bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                            <i class="fa-solid fa-circle-check text-dark fs-4"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- MAIN CHART -->
                <div class="card flex-fill w-100">
                    <div class="card-header border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Volume de Produção</h5>
                        <select class="form-select form-select-sm bg-light border-0 w-auto shadow-none">
                            <option selected>Últimos 7 dias</option>
                            <option>Este Mês</option>
                        </select>
                    </div>
                    <div class="card-body py-3">
                        <div class="chart chart-sm">
                            <canvas id="revenueChart" style="height: 300px; width: 100%;"></canvas>
                        </div>
                    </div>
                </div>

                <!-- BOTTOM WIDGETS ROW -->
                <div class="row">
                    <div class="col-12 col-lg-6 d-flex">
                        <div class="card flex-fill w-100">
                            <div class="card-header border-0 pt-4 px-4">
                                <h5 class="card-title mb-0">Distribuição de Carga</h5>
                            </div>
                            <div class="card-body d-flex w-100">
                                <div class="align-self-center chart chart-sm">
                                    <canvas id="doughnutChart" style="height: 250px; width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 d-flex">
                        <div class="card flex-fill w-100">
                            <div class="card-header border-0 pt-4 px-4">
                                <h5 class="card-title mb-0">Ordens por Etapa</h5>
                            </div>
                            <div class="card-body d-flex w-100">
                                <div class="align-self-center chart chart-sm">
                                    <canvas id="barChart" style="height: 250px; width: 100%;"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ORDERS TABLE (Bottom) -->
                <div class="card flex-fill">
                    <div class="card-header border-0 pt-4 px-4">
                        <h5 class="card-title mb-0">@Portuguese.Dash_OrdersByStage</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover my-0">
                            <thead>
                                <tr>
                                    <th>Etapa</th>
                                    <th>Tempo Médio</th>
                                    <th>Qtd</th>
                                    <th class="text-end">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in dashboard.OperationsByStage)
                                {
                                    <tr>
                                        <td><span class="fw-bold">@TranslateStage(item.Key)</span></td>
                                        <td class="text-muted small">
                                            @(dashboard.AverageStageTime.TryGetValue(item.Key, out var avg) ? avg + "h" : "-")
                                        </td>
                                        <td><span class="badge bg-primary bg-opacity-10 text-primary">@item.Value</span></td>
                                        <td class="text-end">
                                            <div class="progress float-end" style="height: 6px; width: 100px; background-color: #f1f5f9;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @(Math.Min(item.Value * 10, 100))%; border-radius: 10px;"></div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- COLUMNA LATERAL (RIGHT WIDGETS) -->
            <div class="col-xl-4 col-xxl-4">
                
                <!-- ALERTS WIDGET -->
                <div class="card flex-fill">
                    <div class="card-header border-0 pt-4 px-4">
                        <h5 class="card-title mb-0">@Portuguese.Dash_Alerts</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (dashboard.StoppedOperations != null && dashboard.StoppedOperations.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var op in dashboard.StoppedOperations.Take(5))
                                {
                                    <li class="list-group-item border-0 px-4 py-3" style="cursor: pointer;" @onclick="() => ViewOrder(op.Id)">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0">
                                                <div class="bg-danger bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                                    <i class="fa-solid fa-triangle-exclamation text-danger"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <strong class="text-danger d-block small fw-bold">@op.UniqueCode</strong>
                                                <small class="text-muted">@op.ProductDescription</small>
                                            </div>
                                            <div class="text-end">
                                                 <small class="text-muted fw-bold">@op.EstimatedDeliveryDate.ToString("dd/MM")</small>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="p-4 text-center text-muted">
                                <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                                    <i class="fa-solid fa-check text-success fs-4"></i>
                                </div>
                                <p class="mb-0 small fw-bold uppercase">Tudo operando normalmente</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- URGENT ORDERS WIDGET (Serona Style) -->
                <div class="card flex-fill">
                    <div class="card-header border-0 pt-4 px-4">
                         <div class="card-actions float-end">
                            <a href="orders" class="text-decoration-none text-muted"><i class="fa-solid fa-arrow-up-right-from-square small"></i></a>
                        </div>
                        <h5 class="card-title mb-0">Ordens Urgentes</h5>
                    </div>
                    <div class="card-body p-0">
                         <ul class="list-group list-group-flush">
                            @if (dashboard.UrgentOrders != null && dashboard.UrgentOrders.Any())
                            {
                                @foreach (var order in dashboard.UrgentOrders)
                                {
                                    <li class="list-group-item border-0 px-4 py-3" style="cursor: pointer;" @onclick="() => ViewOrder(order.Id)">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 36px; height: 36px;">
                                                <i class="fa-solid fa-clock text-warning"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <strong class="text-dark d-block small fw-bold">@order.UniqueCode</strong>
                                                <small class="text-muted">@order.ProductDescription</small>
                                            </div>
                                            <div class="text-end">
                                                <div class="fw-bold text-danger small">@order.EstimatedDeliveryDate.ToString("dd/MM")</div>
                                                <span class="badge bg-light text-muted border xsmall" style="font-size: 0.6rem;">@TranslateStage(order.CurrentStage)</span>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="p-4 text-center text-muted small fw-bold uppercase">Nenhuma ordem urgente</li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- RECENT ACTIVITY (Transaction Style) -->
                <div class="card flex-fill">
                    <div class="card-header border-0 pt-4 px-4">
                        <h5 class="card-title mb-0">Atividade Recente</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (dashboard.RecentActivities != null && dashboard.RecentActivities.Any())
                            {
                                @foreach (var act in dashboard.RecentActivities.Take(6))
                                {
                                    <li class="list-group-item border-0 px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-shrink-0 me-3">
                                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center shadow-none" style="width: 36px; height: 36px;">
                                                    <i class="fa-solid fa-bolt text-primary small"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <strong class="d-block small fw-bold">@act.UniqueCode</strong>
                                                <small class="text-muted">@act.Action</small>
                                            </div>
                                            <div class="text-end ms-2">
                                                <div class="fw-bold text-dark small">@act.UserName</div>
                                                <div class="text-muted xsmall" style="font-size: 0.65rem;">@act.Date.ToString("HH:mm")</div>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="p-4 text-center text-muted small fw-bold uppercase">Sem atividades recentes</li>
                            }
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@code {
    private DashboardDto? dashboard;
    private bool loading = false;

    protected override async Task OnInitializedAsync()
    {
        var hubUrl = NavigationManager.ToAbsoluteUri("/productionHub").ToString();
        await SignalR.StartConnection(hubUrl);

        SignalR.OnUpdateReceived += async (opId, stage, status) => {
            await LoadDashboard();
            await InvokeAsync(StateHasChanged);
        };

        await LoadDashboard();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!loading && dashboard != null)
        {
            // Initialize Charts if data exists
            if (dashboard.ProductionVolumeHistory != null && dashboard.ProductionVolumeHistory.Any())
            {
                var labels = dashboard.ProductionVolumeHistory.Select(p => p.Label).ToArray();
                var data = dashboard.ProductionVolumeHistory.Select(p => p.Value).ToArray();
                await JSRuntime.InvokeVoidAsync("seronaCharts.renderRevenueChart", "revenueChart", data, labels);
            }

            // Doughnut Chart (Workload)
            if (dashboard.WorkloadByUser != null && dashboard.WorkloadByUser.Any())
            {
                var labels = dashboard.WorkloadByUser.Select(u => u.UserName).ToArray();
                var data = dashboard.WorkloadByUser.Select(u => u.OperationCount).ToArray();
                await JSRuntime.InvokeVoidAsync("seronaCharts.renderDoughnutChart", "doughnutChart", data, labels);
            }

            // Bar Chart (Stages)
            if (dashboard.OperationsByStage != null && dashboard.OperationsByStage.Any())
            {
                var labels = dashboard.OperationsByStage.Keys.Select(TranslateStage).ToArray();
                var data = dashboard.OperationsByStage.Values.ToArray();
                await JSRuntime.InvokeVoidAsync("seronaCharts.renderBarChart", "barChart", data, labels);
            }
        }
    }

    private async Task LoadDashboard()
    {
        try
        {
            loading = true;
            dashboard = await Http.GetFromJsonAsync<DashboardDto>("api/ProductionOrders/dashboard");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally 
        {
            loading = false;
        }
    }
    
    private string TranslateStage(string stage) => stage.ToLower() switch
    {
        "cutting" => Portuguese.Stage_Cutting,
        "sewing" => Portuguese.Stage_Sewing,
        "review" => Portuguese.Stage_Review,
        "packaging" => Portuguese.Stage_Packaging,
        _ => stage
    };

    private void ViewOrder(int id)
    {
        NavigationManager.NavigateTo($"/orders/{id}");
    }

    public async ValueTask DisposeAsync()
    {
        await SignalR.StopConnection();
    }
}
