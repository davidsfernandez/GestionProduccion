@page "/"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models
@using GestionProduccion.Client.Services
@inject HttpClient Http
@inject SignalRService SignalR
@implements IAsyncDisposable

<PageTitle>Painel de Controle</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>📊 Painel de Controle de Produção</h1>

        @if (dashboard == null)
        {
            <p><em>⏳ Carregando...</em></p>
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-primary text-white">📦 Ordens por Etapa</div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in dashboard.OperationsByStage)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key
                                    <span class="badge bg-primary rounded-pill">@item.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-danger text-white">⚠️ Alertas (Ordens Paradas)</div>
                        <ul class="list-group list-group-flush">
                            @if (dashboard.StoppedOperations.Count > 0)
                            {
                                @foreach (var op in dashboard.StoppedOperations)
                                {
                                    <li class="list-group-item">
                                        <strong>@op.UniqueCode</strong><br/>
                                        @op.ProductDescription<br/>
                                        <small class="text-muted">Entrega: @op.EstimatedDeliveryDate:D</small>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">✅ Nenhuma ordem parada</li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-info text-white">👥 Carga de Trabalho por Usuário</div>
                        <ul class="list-group list-group-flush">
                            @if (dashboard.WorkloadByUser.Count > 0)
                            {
                                @foreach (var user in dashboard.WorkloadByUser)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @user.UserName
                                        <span class="badge bg-info rounded-pill">@user.OperationCount</span>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">Nenhum usuário com ordens</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning">
            🔐 Você deve estar autenticado para visualizar o painel.
            <a href="/login" class="alert-link">Clique aqui para fazer login</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private DashboardResponse? dashboard;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
        
        SignalR.OnUpdateReceived += async (opId, novaEtapa, novoStatus) => {
            await LoadDashboard();
            await InvokeAsync(StateHasChanged);
        };

        await SignalR.StartConnection(Http.BaseAddress?.ToString() ?? "https://localhost:5151/producaoHub");
    }

    private async Task LoadDashboard()
    {
        try
        {
            dashboard = await Http.GetFromJsonAsync<DashboardResponse>("api/ProductionOrders/dashboard");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao carregar dashboard: {ex.Message}");
        }
    }

    public async ValueTask DisposeAsync()
    {
        await SignalR.StopConnection();
    }

    private class DashboardResponse
    {
        public Dictionary<string, int> OperationsByStage { get; set; } = new();
        public List<StoppedOperationDto> StoppedOperations { get; set; } = new();
        public List<UserWorkloadDto> WorkloadByUser { get; set; } = new();
    }

    private class StoppedOperationDto
    {
        public int Id { get; set; }
        public string UniqueCode { get; set; } = "";
        public string ProductDescription { get; set; } = "";
        public DateTime EstimatedDeliveryDate { get; set; }
    }

    private class UserWorkloadDto
    {
        public string UserName { get; set; } = "";
        public int OperationCount { get; set; }
    }
}
