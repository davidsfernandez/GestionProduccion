@page "/"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models
@using GestionProduccion.Client.Services
@inject HttpClient Http
@inject SignalRService SignalR
@implements IAsyncDisposable

<PageTitle>Dashboard</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Dashboard de Producción</h1>

        @if (dashboard == null)
        {
            <p><em>Cargando...</em></p>
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">OPs por Etapa</div>
                        <ul class="list-group list-group-flush">
                            @foreach (var item in dashboard.OpsPorEtapa)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @item.Key
                                    <span class="badge bg-primary rounded-pill">@item.Value</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">Alertas (OPs Paradas)</div>
                        <ul class="list-group list-group-flush">
                            @foreach (var op in dashboard.OpsParadas)
                            {
                                <li class="list-group-item">@op.CodigoUnico - @op.DescricaoProduto</li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">Carga de Trabajo por Usuario</div>
                        <ul class="list-group list-group-flush">
                            @foreach (var user in dashboard.CargaTrabalhoPorUsuario)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @user.NomeUsuario
                                    <span class="badge bg-info rounded-pill">@user.QuantidadeOps</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <p>You must be logged in to see the dashboard.</p>
    </NotAuthorized>
</AuthorizeView>

@code {
    private DashboardDto dashboard;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
        
        SignalR.OnUpdateReceived += async (opId, novaEtapa, novoStatus) => {
            await LoadDashboard();
            await InvokeAsync(StateHasChanged);
        };

        await SignalR.StartConnection(Http.BaseAddress + "producaoHub");
    }

    private async Task LoadDashboard()
    {
        try
        {
            dashboard = await Http.GetFromJsonAsync<DashboardDto>("api/ops/dashboard");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    public async ValueTask DisposeAsync()
    {
        await SignalR.StopConnection();
    }
}
