@page "/"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models.DTOs
@using GestionProduccion.Client.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject SignalRService SignalR
@implements IAsyncDisposable

@using GestionProduccion.Client.Resources

<PageTitle>@Portuguese.Dash_Title</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìä @Portuguese.Dash_Title</h1>
        <button class="btn btn-outline-secondary btn-sm" @onclick="LoadDashboard">
            <span class="bi bi-arrow-clockwise"></span> @Portuguese.Refresh
        </button>
    </div>

    @if (dashboard == null)
    {
        <div class="d-flex justify-content-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@Portuguese.Loading</span>
            </div>
        </div>
    }
    else
    {
        <!-- Key Metrics Row -->
        <div class="row g-4 mb-4">
            <div class="col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 bg-primary text-white">
                    <div class="card-body">
                        <h6 class="text-uppercase small fw-bold">@Portuguese.Dash_CompletionRate</h6>
                        <h2 class="mb-0">@dashboard.CompletionRate.ToString("N1")%</h2>
                        <div class="progress mt-2" style="height: 5px; background-color: rgba(255,255,255,0.2);">
                            <div class="progress-bar bg-white" style="width: @dashboard.CompletionRate.ToString("N0")%"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-3">
                <div class="card shadow-sm border-0 bg-success text-white">
                    <div class="card-body">
                        <h6 class="text-uppercase small fw-bold">@Portuguese.Dash_ActiveOrders</h6>
                        <h2 class="mb-0">@dashboard.OperationsByStage.Values.Sum()</h2>
                        <p class="small mb-0 mt-2 opacity-75">@Portuguese.Dash_FactoryFloor</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Orders by Stage -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="card-title mb-0 fw-bold">üì¶ @Portuguese.Dash_OrdersByStage</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in dashboard.OperationsByStage)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <div>
                                    <span class="fw-bold">@TranslateStage(item.Key)</span>
                                    @if (dashboard.AverageStageTime.TryGetValue(item.Key, out var avgTime))
                                    {
                                        <div class="small text-muted">@Portuguese.Dash_AvgHours: @avgTime</div>
                                    }
                                </div>
                                <span class="badge bg-primary rounded-pill">@item.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Alerts (Stopped Orders) -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">‚ö†Ô∏è @Portuguese.Dash_Alerts</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @if (dashboard.StoppedOperations != null && dashboard.StoppedOperations.Any())
                            {
                                @foreach (var op in dashboard.StoppedOperations)
                                {
                                    <li class="list-group-item list-group-item-action" style="cursor: pointer;" @onclick="() => ViewOrder(op.Id)">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 text-danger">@op.UniqueCode</h6>
                                        </div>
                                        <p class="mb-1 small">@op.ProductDescription</p>
                                        <small class="text-muted">@Portuguese.OP_Delivery: @op.EstimatedDeliveryDate.ToShortDateString()</small>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">‚úÖ @Portuguese.Dash_NoStopped</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Workload by User -->
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">üë• @Portuguese.Dash_Workload</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (dashboard.WorkloadByUser != null && dashboard.WorkloadByUser.Any())
                        {
                            @foreach (var user in dashboard.WorkloadByUser)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div>
                                        <div class="fw-bold">@user.UserName</div>
                                        <small class="text-muted">ID: @user.PublicId</small>
                                    </div>
                                    <span class="badge bg-info rounded-pill">@user.OperationCount @Portuguese.OP_Title</span>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-muted">@Portuguese.Dash_NoActiveWork</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private DashboardDto? dashboard;

    protected override async Task OnInitializedAsync()
    {
        // Get absolute URL for the hub
        var hubUrl = NavigationManager.ToAbsoluteUri("/productionHub").ToString();
        await SignalR.StartConnection(hubUrl);

        SignalR.OnUpdateReceived += async (opId, stage, status) => {
            await LoadDashboard();
            await InvokeAsync(StateHasChanged);
        };

        await LoadDashboard();
    }

    private string TranslateStage(string stage) => stage.ToLower() switch
    {
        "cutting" => Portuguese.Stage_Cutting,
        "sewing" => Portuguese.Stage_Sewing,
        "review" => Portuguese.Stage_Review,
        "packaging" => Portuguese.Stage_Packaging,
        _ => stage
    };

    private async Task LoadDashboard()
    {
        try
        {
            dashboard = await Http.GetFromJsonAsync<DashboardDto>("api/ProductionOrders/dashboard");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
    }

    private void ViewOrder(int id)
    {
        NavigationManager.NavigateTo($"/orders/{id}");
    }

    public async ValueTask DisposeAsync()
    {
        await SignalR.StopConnection();
    }
}