@page "/login"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models
@using GestionProduccion.Client.Auth
@using GestionProduccion.Client.Resources
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject UserStateService UserState

<main class="d-flex w-100" style="background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4 mb-4">
                        <div class="bg-white p-3 rounded-circle d-inline-flex shadow-sm mb-3 animate-fade-in">
                            <i class="fa-solid fa-industry text-primary fs-1"></i>
                        </div>
                        <h1 class="h2 fw-bold text-dark animate-fade-in">@Portuguese.Welcome!</h1>
                        <p class="lead text-muted animate-fade-in delay-1">
                            Sistema de Gestão de Produção Serona
                        </p>
                    </div>

                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate-fade-in-up">
                        <div class="card-header bg-primary py-3 border-0">
                            <h5 class="card-title mb-0 text-white text-center">Acesso ao Sistema</h5>
                        </div>
                        <div class="card-body p-5">
                            <div class="m-sm-3">
                                <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                                    <DataAnnotationsValidator />
                                    
                                    <div class="mb-4">
                                        <label class="form-label text-muted small fw-bold">@Portuguese.User_Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"><i class="fa-solid fa-envelope text-muted"></i></span>
                                            <InputText class="form-control form-control-lg bg-light" @bind-Value="loginModel.Email" placeholder="Digite seu e-mail" />
                                        </div>
                                        <ValidationMessage For="@(() => loginModel.Email)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label text-muted small fw-bold">@Portuguese.User_Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-0"><i class="fa-solid fa-lock text-muted"></i></span>
                                            <InputText type="@(showPassword ? "text" : "password")" class="form-control form-control-lg bg-light" @bind-Value="loginModel.Password" placeholder="Sua senha" />
                                            <button class="btn btn-light border-0" type="button" @onclick="() => showPassword = !showPassword">
                                                <i class="fa-solid @(showPassword ? "fa-eye-slash" : "fa-eye") text-muted"></i>
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => loginModel.Password)" class="text-danger small mt-1" />
                                    </div>

                                    <div class="mb-4 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <InputCheckbox @bind-Value="loginModel.RememberMe" class="form-check-input" id="rememberCheck" />
                                            <label class="form-check-label small text-muted" for="rememberCheck">Manter sessão</label>
                                        </div>
                                        <a href="forgot-password" class="small text-primary fw-bold text-decoration-none">Esqueci a senha?</a>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <button type="submit" class="btn btn-lg btn-primary shadow-sm py-3 fw-bold" disabled="@isLoading">
                                            @if (isLoading)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                                <span>@Portuguese.Loading...</span>
                                            }
                                            else
                                            {
                                                <span>@Portuguese.Login <i class="fa-solid fa-arrow-right-to-bracket ms-2"></i></span>
                                            }
                                        </button>
                                    </div>

                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mt-4 mb-0 py-3 border-0 rounded-3 shadow-sm d-flex align-items-center animate-fade-in">
                                            <i class="fa-solid fa-circle-exclamation me-3 fs-4"></i>
                                            <small class="fw-bold">@errorMessage</small>
                                        </div>
                                    }
                                </EditForm>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4 text-muted small">
                        <div class="mb-1">&copy; @DateTime.Now.Year - David Fernandez. Todos os direitos reservados.</div>
                        @if (!string.IsNullOrEmpty(companyName))
                        {
                            <div class="fw-bold">Licenciado para: @companyName</div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private string companyName = "";
    private bool isLoading = false;
    private bool showPassword = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 1. Silent check for setup (First Priority) - Standardized to lowercase for Linux/Azure
            var setupRequired = await Http.GetFromJsonAsync<bool>("api/auth/setup-required");
            if (setupRequired)
            {
                NavigationManager.NavigateTo("/setup");
                return;
            }

            // 2. Fetch public branding info
            var config = await Http.GetFromJsonAsync<PublicConfigurationDto>("api/Configuration/public");
            companyName = config?.CompanyName ?? "";
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Auth Background Check: {ex.Message}");
        }
    }

    private async Task HandleLogin()
    {
        if (isLoading) return;
        
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            var response = await Http.PostAsJsonAsync("api/Auth/login", loginModel);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<LoginResult>();
                if (result != null && !string.IsNullOrEmpty(result.Token))
                {
                    // Update global state immediately
                    UserState.SetUser(result.FullName ?? "Usuário", result.AvatarUrl);
                    
                    await ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsAuthenticated(result.Token, result.RefreshToken);
                    NavigationManager.NavigateTo("/");
                }
                else
                {
                    errorMessage = "Token inválido recebido do servidor.";
                }
            }
            else
            {
                if (response.StatusCode == System.Net.HttpStatusCode.Unauthorized)
                {
                    errorMessage = "Credenciais inválidas. Verifique seu e-mail e senha.";
                }
                else
                {
                    errorMessage = $"{Portuguese.Msg_LoginFailed} ({response.StatusCode})";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{Portuguese.Msg_Error}: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
