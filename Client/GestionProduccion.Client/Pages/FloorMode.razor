@page "/floor"
@layout FloorLayout
@using GestionProduccion.Client.Models.DTOs
@using GestionProduccion.Client.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject SignalRService SignalR
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

@using GestionProduccion.Client.Resources

<PageTitle>MODO PLANTA - @Portuguese.Dash_RealTime</PageTitle>

<div class="floor-container p-4">
    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom border-secondary pb-3">
        <h1 class="display-3 fw-bold text-white mb-0">
            <i class="fa-solid fa-industry me-3 text-primary"></i>@Portuguese.Dash_FactoryFloor
        </h1>
        <div class="text-end">
            <div class="h2 mb-0 text-muted">@DateTime.Now.ToString("HH:mm")</div>
            <div class="h4 text-primary">@DateTime.Now.ToString("dd MMM yyyy")</div>
        </div>
    </div>

    @if (loading)
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
            <div class="spinner-border text-primary" style="width: 5rem; height: 5rem;" role="status">
                <span class="visually-hidden">@Portuguese.Loading</span>
            </div>
        </div>
    }
    else if (orders == null || !orders.Any())
    {
        <div class="alert bg-dark text-white border-secondary p-5 rounded-4 text-center">
            <i class="fa-solid fa-clipboard-check display-1 mb-4 opacity-25"></i>
            <h2 class="display-5">@Portuguese.OP_NoOrdersFound</h2>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in orders.OrderByDescending(o => o.CreationDate))
            {
                <div class="col-xl-4 col-md-6">
                    <div class="card bg-dark border-secondary h-100 shadow-lg floor-card">
                        <div class="card-header border-secondary bg-transparent py-4 px-4 d-flex justify-content-between align-items-start">
                            <div>
                                <h2 class="card-title display-6 fw-bold text-white mb-1">@order.UniqueCode</h2>
                                <span class="badge @GetStatusClass(order.CurrentStatus) fs-4 px-3 py-2">
                                    @TranslateStatus(order.CurrentStatus)
                                </span>
                            </div>
                            <div class="text-end">
                                <div class="fs-1 fw-bold text-primary">@order.Quantity</div>
                                <div class="fs-6 text-muted uppercase">UNIDADES</div>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <h3 class="display-6 text-light mb-4" style="line-height: 1.2;">@order.ProductDescription</h3>
                            
                            <div class="mb-4">
                                <label class="fs-6 text-muted uppercase d-block mb-1">@Portuguese.OP_Stage</label>
                                <div class="fs-2 fw-bold text-white">
                                    <i class="fa-solid fa-layer-group me-2 text-primary"></i>
                                    @TranslateStage(order.CurrentStage)
                                </div>
                            </div>

                            <div class="d-flex align-items-center bg-black bg-opacity-50 p-3 rounded-3">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                    <i class="fa-solid fa-user text-dark fs-4"></i>
                                </div>
                                <div>
                                    <label class="fs-6 text-muted uppercase d-block mb-0">@Portuguese.OP_AssignedTo</label>
                                    <div class="fs-4 fw-bold text-light">@(order.AssignedUserName ?? Portuguese.OP_Unassigned)</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer border-secondary bg-transparent p-4">
                            <button class="btn btn-primary btn-lg w-100 fs-2 py-3 fw-bold shadow-sm" @onclick="() => ViewDetails(order.Id)">
                                <i class="fa-solid fa-eye me-3"></i>@Portuguese.Details
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .floor-container {
        max-width: 1800px;
        margin: 0 auto;
    }

    .floor-card {
        transition: transform 0.3s ease, border-color 0.3s ease;
        border-width: 2px !important;
    }

    .floor-card:hover {
        transform: translateY(-10px);
        border-color: #3b7ddd !important;
    }

    .bg-dark {
        background-color: #1a1a1a !important;
    }

    .uppercase {
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .display-6 {
        font-size: 1.75rem;
    }
</style>

@code {
    private List<ProductionOrderDto>? orders;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var hubUrl = NavigationManager.ToAbsoluteUri("/productionHub").ToString();
            await SignalR.StartConnection(hubUrl);

            SignalR.OnUpdateReceived += HandleUpdate;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"SignalR Error: {ex.Message}");
        }

        await LoadOrders();
    }

    private async void HandleUpdate(int opId, string stage, string status)
    {
        await InvokeAsync(async () => {
            await LoadOrders();
            StateHasChanged();
        });
    }

    private async Task LoadOrders()
    {
        try
        {
            loading = true;
            // Fetch only active orders for floor mode
            var allOrders = await Http.GetFromJsonAsync<List<ProductionOrderDto>>("api/ProductionOrders");
            orders = allOrders?
                .Where(o => o.CurrentStatus != "Completed" && o.CurrentStatus != "Cancelled")
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
            orders = new List<ProductionOrderDto>();
        }
        finally
        {
            loading = false;
        }
    }

    private void ViewDetails(int id) => NavigationManager.NavigateTo($"/orders/{id}");

    private string TranslateStage(string? stage) => stage?.ToLower() switch
    {
        "cutting" => Portuguese.Stage_Cutting,
        "sewing" => Portuguese.Stage_Sewing,
        "review" => Portuguese.Stage_Review,
        "packaging" => Portuguese.Stage_Packaging,
        _ => stage ?? ""
    };

    private string TranslateStatus(string? status) => status?.ToLower() switch
    {
        "inproduction" => Portuguese.Status_InProduction,
        "stopped" => Portuguese.Status_Stopped,
        "completed" => Portuguese.Status_Completed,
        "paused" => Portuguese.Status_Paused,
        "finished" => Portuguese.Status_Finished,
        _ => status ?? ""
    };

    private string GetStatusClass(string? status) => status?.ToLower() switch
    {
        "completed" => "bg-success",
        "inproduction" => "bg-primary",
        "stopped" or "paused" => "bg-danger",
        _ => "bg-secondary"
    };

    public async ValueTask DisposeAsync()
    {
        try 
        { 
            SignalR.OnUpdateReceived -= HandleUpdate;
            await SignalR.StopConnection(); 
        } 
        catch { }
    }
}
