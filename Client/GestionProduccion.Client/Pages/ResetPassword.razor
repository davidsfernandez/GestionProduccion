@page "/reset-password"
@using System.Net.Http.Json
@using GestionProduccion.Client.Models
@inject HttpClient Http
@inject NavigationManager NavManager

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">
                    <div class="text-center mt-4">
                        <h1 class="h2">Redefinir Senha</h1>
                        <p class="lead">Informe sua nova senha.</p>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-3">
                                <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                                    <DataAnnotationsValidator />
                                    
                                    <div class="mb-3">
                                        <label class="form-label">Nova Senha</label>
                                        <InputText type="password" class="form-control form-control-lg" @bind-Value="model.NewPassword" />
                                        <ValidationMessage For="@(() => model.NewPassword)" class="text-danger small" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Confirmar Senha</label>
                                        <InputText type="password" class="form-control form-control-lg" @bind-Value="model.ConfirmPassword" />
                                        <ValidationMessage For="@(() => model.ConfirmPassword)" class="text-danger small" />
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <button type="submit" class="btn btn-lg btn-primary" disabled="@loading">
                                            @if (loading)
                                            {
                                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                                <span> Processando...</span>
                                            }
                                            else
                                            {
                                                <span>Redefinir Senha</span>
                                            }
                                        </button>
                                    </div>

                                    @if (!string.IsNullOrEmpty(errorMessage))
                                    {
                                        <div class="alert alert-danger mt-3 mb-0 py-2">
                                            <small>@errorMessage</small>
                                        </div>
                                    }
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@code {
    private ResetPasswordModel model = new();
    private bool loading = false;
    private string errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);

        if (query["token"] != null)
        {
            model.Token = query["token"] ?? string.Empty;
        }
        if (query["email"] != null)
        {
            model.Email = query["email"] ?? string.Empty;
        }

        if (string.IsNullOrEmpty(model.Token) || string.IsNullOrEmpty(model.Email))
        {
            errorMessage = "Link inválido ou incompleto.";
        }
    }

    private async Task HandleSubmit()
    {
        if (string.IsNullOrEmpty(model.Token))
        {
            errorMessage = "Token inválido.";
            return;
        }

        loading = true;
        errorMessage = string.Empty;
        try
        {
            var response = await Http.PostAsJsonAsync("api/Auth/reset-password", model);
            if (response.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/login");
            }
            else
            {
                // Simple generic error if deserialization fails or structure unknown
                errorMessage = "Erro ao redefinir senha.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}
