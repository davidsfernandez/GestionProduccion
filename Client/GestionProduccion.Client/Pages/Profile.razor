@page "/profile"
@using GestionProduccion.Client.Models.DTOs
@using GestionProduccion.Client.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject ToastService ToastService

@using GestionProduccion.Client.Resources

<PageTitle>@Portuguese.Prof_Title</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">ðŸ‘¤ @Portuguese.Prof_Title</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small d-block">@Portuguese.User_Name</label>
                        <p class="fs-5">@userName</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block">@Portuguese.User_Email</label>
                        <p class="fs-5">@userEmail</p>
                    </div>
                    <div class="mb-0">
                        <label class="text-muted small d-block">@Portuguese.User_Role</label>
                        <span class="badge bg-info fs-6">@TranslateRole(userRole)</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">ðŸ”‘ @Portuguese.Prof_ChangePass</h4>
                </div>
                <div class="card-body">
                    <EditForm Model="passwordModel" OnValidSubmit="HandleChangePassword">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-3">
                            <label class="form-label">@Portuguese.Prof_CurrentPass</label>
                            <InputText type="password" class="form-control" @bind-Value="passwordModel.CurrentPassword" />
                            <ValidationMessage For="@(() => passwordModel.CurrentPassword)" class="text-danger" />
                        </div>

                        <hr />

                        <div class="mb-3">
                            <label class="form-label">@Portuguese.Prof_NewPass</label>
                            <InputText type="password" class="form-control" @bind-Value="passwordModel.NewPassword" />
                            <ValidationMessage For="@(() => passwordModel.NewPassword)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Portuguese.Prof_ConfirmPass</label>
                            <InputText type="password" class="form-control" @bind-Value="passwordModel.ConfirmPassword" />
                            <ValidationMessage For="@(() => passwordModel.ConfirmPassword)" class="text-danger" />
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <button type="submit" class="btn btn-dark w-100" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm"></span>
                                <span> @Portuguese.Loading</span>
                            }
                            else
                            {
                                <span>@Portuguese.Save</span>
                            }
                        </button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ChangePasswordRequest passwordModel = new();
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? userName;
    private string? userEmail;
    private string? userRole;

    [CascadingParameter] private Task<AuthenticationState> authStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var authState = await authStateTask;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            userName = user.Identity.Name;
            userEmail = user.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
            userRole = user.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
        }
    }

    private string TranslateRole(string? role) => role?.ToLower() switch
    {
        "administrator" => Portuguese.Role_Admin,
        "leader" => Portuguese.Role_Leader,
        "operator" => Portuguese.Role_Operator,
        "workshop" => Portuguese.Role_Workshop,
        _ => role ?? ""
    };

    private async Task HandleChangePassword()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var response = await Http.PostAsJsonAsync("api/Auth/change-password", passwordModel);

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowToast(Portuguese.Msg_PassChanged, ToastLevel.Success);
                passwordModel = new(); // Reset form
            }
            else
            {
                errorMessage = "Erro ao atualizar senha. Verifique sua senha atual.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{Portuguese.Msg_Error}: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
