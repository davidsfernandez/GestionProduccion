@page "/orders/create"
@using GestionProduccion.Models.DTOs
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator,Leader")]
@using GestionProduccion.Client.Services
@using GestionProduccion.Client.Services.ProductionOrders
@using GestionProduccion.Domain.Enums
@inject IProductionOrderQueryClient QueryClient
@inject IProductionOrderMutationClient MutationClient
@inject IProductionOrderLifecycleClient LifecycleClient
@inject IProductClient ProductClient
@inject ISewingTeamClient SewingTeamClient
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ToastService ToastService

@using GestionProduccion.Client.Resources

<PageTitle>@Portuguese.OP_Create_Title</PageTitle>

<div class="container-fluid p-0 animate-fade-in">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <h3 class="text-dark mb-0">@Portuguese.OP_Create_Title</h3>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0">
                <div class="card-header border-0 pt-4 px-4 bg-white">
                    <h5 class="card-title mb-0">Nova Ordem de Produção</h5>
                </div>
                <div class="card-body p-4">
                    @if (isInitialLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <div class="mt-2 text-muted">Carregando seletores dinâmicos...</div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="createModel" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <div class="col-12 mb-4">
                                    <div class="alert alert-primary d-flex align-items-center" role="alert">
                                        <i class="fa-solid fa-wand-magic-sparkles me-3 fs-4"></i>
                                        <div>
                                            <strong>Geração Automática</strong>
                                            <div class="small">O código do lote (OP) será gerado sequencialmente pelo sistema ao salvar.</div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Produto</label>
                                    <InputSelect ValueExpression="@(()=>createModel.ProductId)" 
                                                 Value="@createModel.ProductId" 
                                                 ValueChanged="@((int value) => OnProductChanged(value))"
                                                 class="form-select form-select-lg">
                                        <option value="0">-- Selecione un produto --</option>
                                        @if (products != null)
                                        {
                                            @foreach (var prod in products)
                                            {
                                                <option value="@prod.Id">@prod.Name (@prod.InternalCode)</option>
                                            }
                                        }
                                    </InputSelect>
                                    <ValidationMessage For="@(() => createModel.ProductId)" class="text-danger small" />
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Quantidade</label>
                                    <InputNumber @bind-Value="createModel.Quantity" class="form-control form-control-lg" />
                                    <ValidationMessage For="@(() => createModel.Quantity)" class="text-danger small" />
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Data Estimada de Entrega</label>
                                    <InputDate @bind-Value="createModel.EstimatedDeliveryDate" class="form-control form-control-lg" />
                                    <ValidationMessage For="@(() => createModel.EstimatedDeliveryDate)" class="text-danger small" />
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Cliente (Opcional)</label>
                                    <InputText @bind-Value="createModel.ClientName" class="form-control" />
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Tamanho</label>
                                    <InputSelect @bind-Value="createModel.Size" class="form-select" disabled="@(createModel.ProductId == 0)">
                                        <option value="">N/A</option>
                                        @if (availableSizes != null)
                                        {
                                            @foreach (var s in availableSizes)
                                            {
                                                <option value="@s.Size">@s.Size</option>
                                            }
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Atribuir Equipe (Opcional)</label>
                                    <InputSelect @bind-Value="createModel.SewingTeamId" class="form-select">
                                        <option value="">-- Nenhuma equipe --</option>
                                        @if (teams != null)
                                        {
                                            @foreach (var team in teams)
                                            {
                                                <option value="@team.Id">@team.Name</option>
                                            }
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label class="form-label fw-bold">Atribuir Operador (Opcional)</label>
                                    <InputSelect @bind-Value="createModel.UserId" class="form-select">
                                        <option value="">-- Não atribuir agora --</option>
                                        @if (users != null)
                                        {
                                            @foreach (var user in users)
                                            {
                                                <option value="@user.Id">@user.Name (@user.Role)</option>
                                            }
                                        }
                                    </InputSelect>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-2">
                                <button type="button" class="btn btn-light px-4" @onclick="Cancel">Cancelar</button>
                                <button type="submit" class="btn btn-primary px-5 shadow-sm" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    Criar Ordem
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card bg-primary text-white border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h5 class="card-title text-white opacity-75">Resumo da Ordem</h5>
                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Código:</span>
                            <span class="fw-bold">@createModel.UniqueCode</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Quantidade:</span>
                            <span class="fw-bold">@createModel.Quantity</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Entrega:</span>
                            <span class="fw-bold">@createModel.EstimatedDeliveryDate.ToShortDateString()</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="alert alert-info border-0 shadow-sm p-4 rounded-4">
                <div class="d-flex">
                    <i class="fa-solid fa-circle-info fa-2x me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-1">Dica de Produção</h6>
                        <p class="mb-0 small opacity-75">As ordens criadas iniciam automaticamente no estágio de <strong>Corte</strong> com status <strong>Em Produção</strong>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProductionOrderRequest createModel = new() 
    { 
        UniqueCode = "AUTO-GENERATED", // Placeholder for client validation
        EstimatedDeliveryDate = DateTime.Now.AddDays(7),
        Quantity = 1
    };
    private List<UserDto>? users;
    private List<ProductDto>? products;
    private List<SewingTeamDto>? teams;
    private List<ProductSizeDto>? availableSizes;
    private bool isSubmitting = false;
    private bool isInitialLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialData();
    }

    private async Task LoadInitialData()
    {
        try
        {
            isInitialLoading = true;
            
            // Parallel loading using specialized clients
            var usersTask = Http.GetFromJsonAsync<ApiResponse<List<UserDto>>>("api/Users"); 
            var productsTask = ProductClient.GetAllProductsAsync();
            var teamsTask = SewingTeamClient.GetAllTeamsAsync();

            await Task.WhenAll(usersTask, productsTask, teamsTask);

            var userResp = await usersTask;
            if (userResp?.Success == true)
            {
                users = userResp.Data.Where(u => u.Role == UserRole.Operator || u.Role == UserRole.Workshop).ToList();
            }

            products = await productsTask;
            var teamResp = await teamsTask;
            if (teamResp?.Success == true)
            {
                teams = teamResp.Data.Where(t => t.IsActive).ToList();
            }
        }
        catch (Exception)
        {
            ToastService.ShowToast(Portuguese.Msg_Error, ToastLevel.Error);
        }
        finally
        {
            isInitialLoading = false;
        }
    }

    private void OnProductChanged(int productId)
    {
        createModel.ProductId = productId;
        if (productId > 0 && products != null)
        {
            var selectedProduct = products.FirstOrDefault(p => p.Id == productId);
            availableSizes = selectedProduct?.Sizes;
            createModel.Size = "";
        }
        else
        {
            availableSizes = null;
            createModel.Size = "";
        }
    }

    private async Task HandleSubmit()
    {
        if (isSubmitting) return;
        
        isSubmitting = true;
        try
        {
            var result = await MutationClient.CreateProductionOrderAsync(createModel);
            
            if (result != null)
            {
                ToastService.ShowToast(Portuguese.Msg_OrderUpdated, ToastLevel.Success);
                NavigationManager.NavigateTo($"/orders/{result.Id}");
            }
            else
            {
                ToastService.ShowToast(Portuguese.Msg_Error, ToastLevel.Error);
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowToast($"{Portuguese.Msg_Error}: {ex.Message}", ToastLevel.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/orders");
    }
}
