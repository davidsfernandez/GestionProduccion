@page "/orders/create"
@using GestionProduccion.Client.Models.DTOs
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator,Leader")]
@using GestionProduccion.Client.Services
@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject ToastService ToastService

@using GestionProduccion.Client.Resources

<PageTitle>@Portuguese.OP_Create_Title</PageTitle>

<div class="container-fluid p-0">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <h3 class="text-dark mb-0">@Portuguese.OP_Create_Title</h3>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8 col-xl-7">
            <div class="card shadow-sm border-0">
                <div class="card-header border-0 pt-4 px-4 bg-white">
                    <h5 class="card-title mb-0">Nova Ordem de Produção</h5>
                </div>
                <div class="card-body p-4">
                    <EditForm Model="createModel" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-bold text-muted">@Portuguese.OP_Code (OP)</label>
                                <InputText class="form-control form-control-lg bg-light" @bind-Value="createModel.UniqueCode" placeholder="Ex: OP-2024-001" />
                                <ValidationMessage For="@(() => createModel.UniqueCode)" class="text-danger small mt-1" />
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-bold text-muted">@Portuguese.OP_Qty</label>
                                <InputNumber class="form-control form-control-lg bg-light" @bind-Value="createModel.Quantity" />
                                <ValidationMessage For="@(() => createModel.Quantity)" class="text-danger small mt-1" />
                            </div>
                        </div>

                        <!-- Product Selection -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted">Produto do Catálogo</label>
                            <InputSelect class="form-select form-select-lg bg-light" Value="createModel.ProductId" ValueExpression="@(() => createModel.ProductId)" ValueChanged="@((int? id) => OnProductChanged(id))">
                                <option value="">Selecione um produto...</option>
                                @if (products != null)
                                {
                                    @foreach (var p in products)
                                    {
                                        <option value="@p.Id">@p.MainSku - @p.Name (@p.FabricType)</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        <!-- Fallback/Override Description -->
                        <div class="row">
                            <div class="col-md-8 mb-4">
                                <label class="form-label small fw-bold text-muted">@Portuguese.OP_ProductDesc</label>
                                <InputText class="form-control form-control-lg bg-light" @bind-Value="createModel.ProductDescription" placeholder="Descreva o produto..." disabled="@(createModel.ProductId.HasValue)" />
                                <ValidationMessage For="@(() => createModel.ProductDescription)" class="text-danger small mt-1" />
                            </div>
                            <div class="col-md-4 mb-4">
                                <label class="form-label small fw-bold text-muted">Tamanho / Grade</label>
                                @if (createModel.ProductId.HasValue && selectedProductSizes != null && selectedProductSizes.Any())
                                {
                                    <InputSelect class="form-select form-select-lg bg-light" @bind-Value="createModel.Size">
                                        <option value="">Selecione...</option>
                                        @foreach (var s in selectedProductSizes)
                                        {
                                            <option value="@s.SizeName">@s.SizeName</option>
                                        }
                                    </InputSelect>
                                }
                                else
                                {
                                    <InputText class="form-control form-control-lg bg-light" @bind-Value="createModel.Size" placeholder="Ex: M, G, 42..." />
                                }
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-bold text-muted">Cliente / Destino (Opcional)</label>
                                <InputText class="form-control form-control-lg bg-light" @bind-Value="createModel.ClientName" placeholder="Nome do cliente..." />
                            </div>
                            <div class="col-md-6 mb-4">
                                <label class="form-label small fw-bold text-muted">@Portuguese.OP_EstimatedDelivery</label>
                                <InputDate class="form-control form-control-lg bg-light" @bind-Value="createModel.EstimatedDeliveryDate" />
                                <ValidationMessage For="@(() => createModel.EstimatedDeliveryDate)" class="text-danger small mt-1" />
                                @if (isDateAutoCalculated)
                                {
                                    <span class="text-success small"><i class="fa-solid fa-magic"></i> Calculado automaticamente</span>
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted">Responsável / Atribuir a (Opcional)</label>
                            <InputSelect class="form-select form-select-lg bg-light" @bind-Value="createModel.UserId">
                                <option value="">Não atribuído</option>
                                @if (assignableUsers != null)
                                {
                                    @foreach (var user in assignableUsers)
                                    {
                                        <option value="@user.Id">@user.Name (@TranslateRole(user.Role))</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger d-flex align-items-center rounded-3">
                                <i class="fa-solid fa-circle-exclamation me-2"></i>
                                <div>@errorMessage</div>
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2 mt-2">
                            <button type="button" class="btn btn-secondary px-4" @onclick="Cancel">@Portuguese.Cancel</button>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span> @Portuguese.Loading
                                }
                                else
                                {
                                    <i class="fa-solid fa-save me-2"></i> @Portuguese.Create
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="alert bg-primary-soft border-0 rounded-4 p-4 shadow-sm">
                <h5 class="fw-bold mb-3 text-primary"><i class="fa-solid fa-circle-info me-2"></i> Ajuda</h5>
                <p class="small mb-0 text-muted" style="line-height: 1.6;">
                    Agora você pode selecionar produtos diretamente do Catálogo para preencher automaticamente as informações.
                    <br/><br/>
                    <b>Dica:</b> A data de entrega é sugerida baseada no histórico de produção deste item.
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProductionOrderRequest createModel = new()
    {
        EstimatedDeliveryDate = DateTime.Today.AddDays(7)
    };

    private List<UserDto>? assignableUsers;
    private List<ProductDto>? products;
    private List<ProductSizeDto>? selectedProductSizes;
    private bool isSubmitting = false;
    private bool isDateAutoCalculated = false;
    private string errorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var usersTask = Http.GetFromJsonAsync<List<UserDto>>("api/ProductionOrders/assignable");
            var productsTask = Http.GetFromJsonAsync<List<ProductDto>>("api/Products");
            
            await Task.WhenAll(usersTask, productsTask);
            
            assignableUsers = await usersTask;
            products = await productsTask;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void OnProductChanged(int? productId)
    {
        createModel.ProductId = productId;
        isDateAutoCalculated = false;
        selectedProductSizes = null;

        if (productId.HasValue && products != null)
        {
            var product = products.FirstOrDefault(p => p.Id == productId.Value);
            if (product != null)
            {
                createModel.ProductDescription = $"{product.Name} ({product.FabricType})";
                selectedProductSizes = product.Sizes;
                
                // Auto-calculate date (Phase 2)
                if (product.AverageProductionTimeMinutes > 0)
                {
                    // Add average time (in minutes) to now, then round to days if needed or just set date
                    // Assuming working days logic is simpler for MVP: just add days based on minutes / 480 (8h)
                    double days = product.AverageProductionTimeMinutes / 480.0;
                    if (days < 1) days = 1;
                    
                    createModel.EstimatedDeliveryDate = DateTime.Today.AddDays(Math.Ceiling(days));
                    isDateAutoCalculated = true;
                }
            }
        }
        else
        {
            createModel.ProductDescription = "";
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;

            var response = await Http.PostAsJsonAsync("api/ProductionOrders", createModel);

            if (response.IsSuccessStatusCode)
            {
                ToastService.ShowToast(Portuguese.Msg_OrderCreated, ToastLevel.Success);
                NavigationManager.NavigateTo("/orders");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"{Portuguese.Msg_Error}: {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{Portuguese.Msg_Error}: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel() => NavigationManager.NavigateTo("/orders");

    private string TranslateRole(UserRole role) => role switch
    {
        UserRole.Administrator => Portuguese.Role_Admin,
        UserRole.Leader => Portuguese.Role_Leader,
        UserRole.Operator => Portuguese.Role_Operator,
        UserRole.Sewer => Portuguese.Role_Operator,
        UserRole.Workshop => Portuguese.Role_Workshop,
        _ => role.ToString()
    };
}
