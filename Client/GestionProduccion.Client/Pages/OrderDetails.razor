@page "/orders/{Id:int}"
@using GestionProduccion.Client.Models.DTOs
@using Microsoft.AspNetCore.Authorization
@using System.Text.Json
@using System.Text.Json.Serialization
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Order Details - @order?.UniqueCode</PageTitle>

<div class="container mt-4">
    @if (loading)
    {
        <div class="d-flex justify-content-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (order == null)
    {
        <div class="alert alert-danger">Order not found.</div>
        <button class="btn btn-secondary" @onclick="GoBack">Back to List</button>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="btn btn-outline-secondary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Back
            </button>
            <h2>Order: @order.UniqueCode</h2>
            <span class="badge @GetStatusClass(order.CurrentStatus) fs-5">@order.CurrentStatus</span>
        </div>

        <div class="row">
            <!-- Order Info -->
            <div class="col-md-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">General Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <label class="text-muted small d-block">Product</label>
                                <strong>@order.ProductDescription</strong>
                            </div>
                            <div class="col-sm-3 mb-3">
                                <label class="text-muted small d-block">Quantity</label>
                                <strong>@order.Quantity units</strong>
                            </div>
                            <div class="col-sm-3 mb-3">
                                <label class="text-muted small d-block">Current Stage</label>
                                <span class="badge bg-secondary">@order.CurrentStage</span>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label class="text-muted small d-block">Created On</label>
                                <span>@order.CreationDate.ToString("f")</span>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <label class="text-muted small d-block">Estimated Delivery</label>
                                <span class="text-primary fw-bold">@order.EstimatedDeliveryDate.ToLongDateString()</span>
                            </div>
                            <div class="col-sm-12">
                                <label class="text-muted small d-block">Assigned To</label>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="bi bi-person-circle fs-4"></i>
                                        <span>@(order.AssignedUserName ?? "Not assigned yet")</span>
                                    </div>
                                    
                                    <AuthorizeView Roles="Administrator,Leader" Context="authContext">
                                        <div class="input-group input-group-sm w-auto">
                                            <select class="form-select" @onchange="OnUserSelected">
                                                <option value="">Change assignment...</option>
                                                @if (assignableUsers != null)
                                                {
                                                    @foreach (var user in assignableUsers)
                                                    {
                                                        <option value="@user.Id" selected="@(user.Id == order.UserId)">@user.Name (@user.Role)</option>
                                                    }
                                                }
                                            </select>
                                            <button class="btn btn-primary" @onclick="AssignUser" disabled="@(selectedUserId == 0 || isAssigning)">
                                                @if (isAssigning)
                                                {
                                                    <span class="spinner-border spinner-border-sm"></span>
                                                }
                                                else
                                                {
                                                    <span>Assign</span>
                                                }
                                            </button>
                                        </div>
                                    </AuthorizeView>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions Card -->
                <AuthorizeView Roles="Administrator,Leader,Operator" Context="actionContext">
                    <div class="card shadow-sm border-primary mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Production Controls</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                <button class="btn btn-success" @onclick="AdvanceStage" 
                                        disabled="@(order.CurrentStage == "Packaging" || order.CurrentStatus == "Completed")">
                                    <i class="bi bi-arrow-right-circle"></i> Advance Stage
                                </button>
                                
                                @if (order.CurrentStatus == "Stopped")
                                {
                                    <button class="btn btn-warning" @onclick="ResumeOrder">
                                        <i class="bi bi-play-fill"></i> Resume Production
                                    </button>
                                }
                                else if (order.CurrentStatus != "Completed")
                                {
                                    <button class="btn btn-danger" @onclick="StopOrder">
                                        <i class="bi bi-pause-fill"></i> Stop/Pause
                                    </button>
                                }

                                @if (order.CurrentStage == "Packaging" && order.CurrentStatus != "Completed")
                                {
                                    <AuthorizeView Roles="Administrator,Leader" Context="completeContext">
                                        <button class="btn btn-dark" @onclick="CompleteOrder">
                                            <i class="bi bi-check-all"></i> Mark as Completed
                                        </button>
                                    </AuthorizeView>
                                }
                            </div>
                        </div>
                    </div>
                </AuthorizeView>

                <!-- History -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">History & Logs</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Action</th>
                                        <th>By</th>
                                        <th>Note</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (history != null)
                                    {
                                        @foreach (var log in history.OrderByDescending(h => h.ModificationDate))
                                        {
                                            <tr>
                                                <td class="small">@log.ModificationDate.ToString("g")</td>
                                                <td>
                                                    <span class="small text-muted">@log.PreviousStage -> </span>
                                                    <strong>@log.NewStage</strong>
                                                </td>
                                                <td>@log.UserName</td>
                                                <td class="small">@log.Note</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="col-md-4">
                <div class="alert alert-info shadow-sm">
                    <h6><i class="bi bi-info-circle"></i> Workflow Tip</h6>
                    <p class="small mb-0">Orders must follow the flow: <strong>Cutting -> Sewing -> Review -> Packaging</strong>.</p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ProductionOrderDto? order;
    private List<ProductionHistoryDto>? history;
    private List<UserDto>? assignableUsers;
    private bool loading = true;
    private bool isAssigning = false;
    private int selectedUserId;

    private static JsonSerializerOptions _jsonOptions = new JsonSerializerOptions 
    { 
        PropertyNameCaseInsensitive = true,
        Converters = { new JsonStringEnumConverter() } 
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await LoadAssignableUsers();
    }

    private async Task LoadData()
    {
        try
        {
            loading = true;
            var orderResp = await Http.GetAsync($"api/ProductionOrders/{Id}");
            if (orderResp.IsSuccessStatusCode)
            {
                var content = await orderResp.Content.ReadAsStringAsync();
                order = JsonSerializer.Deserialize<ProductionOrderDto>(content, _jsonOptions);
            }

            var historyResp = await Http.GetAsync($"api/ProductionOrders/{Id}/history");
            if (historyResp.IsSuccessStatusCode)
            {
                var content = await historyResp.Content.ReadAsStringAsync();
                history = JsonSerializer.Deserialize<List<ProductionHistoryDto>>(content, _jsonOptions);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadAssignableUsers()
    {
        try
        {
            var response = await Http.GetAsync("api/Users/assignable");
            if (response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();
                assignableUsers = JsonSerializer.Deserialize<List<UserDto>>(content, _jsonOptions);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
    }

    private void OnUserSelected(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out var userId))
        {
            selectedUserId = userId;
        }
        else
        {
            selectedUserId = 0;
        }
    }

    private async Task AssignUser()
    {
        if (selectedUserId == 0) return;

        try
        {
            isAssigning = true;
            var response = await Http.PostAsJsonAsync($"api/ProductionOrders/{Id}/assign", new { UserId = selectedUserId });
            
            if (response.IsSuccessStatusCode)
            {
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex.Message}");
        }
        finally
        {
            isAssigning = false;
        }
    }

    private async Task AdvanceStage()
    {
        var response = await Http.PostAsync($"api/ProductionOrders/{Id}/advance-stage", null);
        if (response.IsSuccessStatusCode) await LoadData();
    }

    private async Task StopOrder()
    {
        var request = new { NewStatus = "Stopped", Note = "Order manually stopped" }; 
        await Http.PatchAsJsonAsync($"api/ProductionOrders/{Id}/status", request);
        await LoadData();
    }

    private async Task ResumeOrder()
    {
        var request = new { NewStatus = "InProduction", Note = "Production resumed" };
        await Http.PatchAsJsonAsync($"api/ProductionOrders/{Id}/status", request);
        await LoadData();
    }

    private async Task CompleteOrder()
    {
        var request = new { NewStatus = "Completed", Note = "Final product ready" };
        await Http.PatchAsJsonAsync($"api/ProductionOrders/{Id}/status", request);
        await LoadData();
    }

    private void GoBack() => NavigationManager.NavigateTo("/orders");

    private string GetStatusClass(string? status) => status?.ToLower() switch
    {
        "completed" => "bg-success",
        "inproduction" => "bg-primary",
        "pending" => "bg-warning text-dark",
        "stopped" or "paused" => "bg-danger",
        _ => "bg-secondary"
    };
}
