@inherits LayoutComponentBase

<div class="floor-layout">
    <main>
        @Body
    </main>
</div>

<style>
    .floor-layout {
        background-color: #111;
        color: #eee;
        min-height: 100vh;
        width: 100vw;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
    }
    
    body {
        margin: 0;
        padding: 0;
        background-color: #111;
    }
</style>
